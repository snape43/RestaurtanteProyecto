@model Infraestructure.Models.Pedido

@{
    ViewBag.Title = "Pedido";
}

<h2 class="titulos">@ViewBag.Title</h2>

<div class="card card_detalle ">
    <h4 class="titulos" style="font-size:24px;">Detalle del pedido</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="row">
            <div class="col-12 col-md-6">
        <dt>
            @Html.DisplayNameFor(model => model.FechaPedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaPedido)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            <b>Restaurante</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mesa.Restaurante.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdCliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdEmpleado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario1.Nombre)

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdMesa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mesa.NumeroMesa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observaciones)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdEstadoPedido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EstadoPedido.Descripcion)
        </dd>


</div>
<div class="col-12 col-md-6">
    <div class="card_detalle">
        <h4 class="titulos" style="font-size:24px;">Detalle de los productos</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.DetallePedido)
            </dt>

            <dd>
                <ul>
                    @* @foreach (var e in (List<Infraestructure.Models.Producto>)ViewBag)
                        {
                            <li>Nombre Producto:@e.Descripcion <br />Precio Producto: @e.Precio</li>
                        }*@
                    @foreach (var c in Model.DetallePedido)
                    {
                        <li><b>Nombre Producto:</b> @c.Producto.Descripcion<br /><b>Cantidad Producto:</b> @c.Cantidad<br /><b>Notas sobre Pedido:</b> @c.Nota<br /><b>Precio:</b> ₡@c.Producto.Precio</li>

                    }
                </ul>
            </dd>
        </dl>
    </div>
    <div class="mt-3">

        @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-secondary float-end mb-4" })
    </div>

</div>


