@model Infraestructure.Models.Producto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal card_detalle">
        <h4 class="titulos sub_title">Producto nuevo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <div class="control-label col-md-2 pd-6">
                        <span>Descripción</span>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <div class="control-label col-md-2 pd-6">
                        <span>Ingredientes</span>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Ingredientes, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Ingredientes, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-6">

                <div class="form-group">
                    <div class="control-label col-md-2 pd-6">
                        <span>Precio</span>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoriaProducto, "Categoría", htmlAttributes: new { @class = "control-label col-md-2 pd-6" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IdCategoriaProducto,
                       (SelectList)ViewBag.idCategoria,
                       "Selecione una Categoría",
                       htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdCategoriaProducto, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "form-label mt-4" })
                    <div class="col-md-10">
                        <input type="file" name="ImageFile" class="form-control" required />
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 pd-6">
                <span>Estado</span>
            </div>
            <div>
                <div class="checkbox">
                    @Html.EditorFor(model => model.Estado)
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-warning" style="padding:10px 25px; color:white" />
            </div>
        </div>
    </div>
}
<div class="mt-5">

    @Html.ActionLink("Regresar al listado", "IndexAdmin", null, new { @class = "btn btn-secondary float-end mb-4" })
</div>

